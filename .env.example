# Пример файла переменных окружения
# Скопируйте этот файл в .env и заполните своими значениями

# Режим работы приложения
NODE_ENV=production

# Порт для запуска сервера
PORT=5000

# Строка подключения к базе данных PostgreSQL
# Формат: postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://techuser:your_password_here@localhost:5432/techcenter

# Секретный ключ для сессий (сгенерируйте длинную случайную строку)
SESSION_SECRET=your_very_long_random_session_secret_here

# Опциональные настройки

# Максимальный размер загружаемых файлов (в байтах)
MAX_FILE_SIZE=52428800

# Директория для загруженных файлов
UPLOAD_DIR=uploads

# Настройки CORS (если нужно)
CORS_ORIGIN=*

# Настройки для отправки email (если используется)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# API ключи для внешних сервисов (если используются)
# EXTERNAL_API_KEY=your_api_key_here